	@SuppressWarnings("deprecation")
	public void add(){
		Godness g = new Godness();
		@SuppressWarnings("resource")
		Scanner scan = new Scanner(System.in);
		System.out.println("Please enter user_name: ");
		g.setUser_name(scan.next());
		System.out.println("Please enter sex(0 as male, 1 as female): ");
		g.setSex(scan.nextInt());
		System.out.println("Please enter age: ");
		g.setAge(scan.nextInt());
		System.out.println("Please enter birthday(format:yyyy-mm-dd): ");
		g.setBirthday(Date.parse(scan.next()));
		System.out.println("Please enter email: ");
		g.setEmail(scan.next());
		System.out.println("Please enter mobile: ");
		g.setMoblie(scan.next());
		System.out.println("Please enter create_user: ");
		g.setCreate_user(scan.next());
		System.out.println("Please enter update_user: ");
		g.setUpdate_user(scan.next());
		System.out.println("Please enter create_date: ");
		g.setCreate_date(scan.next());
		System.out.println("Please enter update_date: ");
		g.setUpdate_date(scan.next());
		g.setIsdel(0);
	}
	
